  </head>

  <body>
    <div class="navbar-wrapper">
      <div class="container">

        <div class="navbar navbar-inverse">
          <div class="navbar-inner">
            <button id='navBtn' type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to 'Cardona Designs', '/', :class => 'brand' %>
            <div class="nav-collapse collapse">
              <ul class="nav">
                <li <% if current_page?(:action => 'index') %> class="active"<% end %>><%= link_to 'Home', '/' %></li>
                <li <% if current_page?(:action => 'services') %> class="active"<% end %>><%= link_to 'Services', '/welcome/services' %></li>
                <li <% if current_page?(:action => 'portfolio') %> class="active"<% end %>><%= link_to 'Portfolio', '/welcome/portfolio' %></li>
                <li <% if current_page?(:action => 'quote') %> class="active"<% end %>><%= link_to 'Free Quote', '/welcome/quote' %></li>
                <li <% if current_page?(:action => 'thoughts') %> class="active"<% end %>><%= link_to 'Thoughts', '/welcome/thoughts' %></li>
                <!--li><a href="#contact">Contact Us</a></li>
                <li><a href="#about">About Us</a></li>
                <li><a href="#news">News</a></li-->
              </ul>
            </div><!--/.nav-collapse -->
          </div><!-- /.navbar-inner -->
        </div><!-- /.navbar -->

      </div> <!-- /.container -->
    </div><!-- /.navbar-wrapper -->

      <%= yield %>

      <div class="container">
        <footer>
        <p>Cardona Designs - San Francisco, Ca - Phone: <a href="tel:+18313257406">831.325.7406</a> - cgcardona(at)gmail.com</p>
          <p class="pull-right"><a href="#">Back to top</a></p>
          <p><a href='http://creativecommons.org/licenses/by-sa/3.0/deed.en_US'>Creative Commons</a></p>
        </footer>
      </div>


  <%= javascript_include_tag "application" %>
    <script>
      !function ($) {
        $(function(){
          // carousel demo
          $('#myCarousel').carousel()
        })
      }(window.jQuery)
    </script>
  </body>
</html>
